#!/usr/bin/env bash
set -euo pipefail

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMRT)

if [[ -z "$STAGED_FILES" ]]; then
  exit 0
fi

# Node (.)
# ui-native mirrors CI with Biome only.
NODE_FILES="$STAGED_FILES"
if echo "$NODE_FILES" | grep -qE '\.(ts|tsx|js|jsx|json|css|scss|yml|yaml)$|^package\.json$|^bun\.lockb?$|^biome\.json$|^tsconfig\..*\.json$'; then
  echo 'Running Biome checks...'
  bunx biome ci .
fi


echo 'Pre-commit checks complete.'
