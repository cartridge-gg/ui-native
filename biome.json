{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/.expo",
			"!**/dist",
			"!**/build",
			"!pnpm-lock.yaml",
			"!**/__image_snapshots__",
			"!**/visual-comparisons",
			"!ui"
		]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noChildrenProp": "warn",
				"useExhaustiveDependencies": "warn"
			},
			"complexity": {
				"noForEach": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noExplicitAny": "warn"
			}
		}
	}
}
